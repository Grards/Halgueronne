{% extends 'base.html.twig' %}

{% block title %}Halgueronne - Suppression de compte{% endblock %}

{% block body %}
<div id="admin-user-delete-page" class="slide pb-5">
    <div class="container">
        {% include 'partials/title.html.twig' %}
        <div class="row">
            <h2>Êtes-vous sure de vouloir supprimer cette utilisateur ?</h2>
        </div>
        <div class="container-content">
            <div class="row mb-4">
                <h4 class="text-center bg-danger text-white text-center p-3 w-50 m-auto"><i class="fas fa-exclamation-triangle"></i> Cette action est irréversible <i class="fas fa-exclamation-triangle"></i></h4>
            </div>
            <div class="row">
                <h3>{{ users.login }}</h3>
            </div>
            <div class="row">
                {% if users.avatar == 'img/no-avatar.png' %}
                    <div><img class="row users-list-avatar" src="../../public/img/no-avatar.png" alt="Avatar de l'utilisateur"></div>
                {% else %}
                    <div><img class="row users-list-avatar" src="{{ users.avatar }}" alt="Avatar de l'utilisateur"></div>
                {% endif %}
            </div> 
            <div class="row">
                <ul>
                    <li><b>Email :</b> {{ users.mail }}</li>
                    {# <li>Message : {{users.posts }}</li> #}
                </ul>
            </div>
            <div class="row">
                <a href="{{ path('admin_user_delete_confirm', {'slug' : users.slug}) }}" class="btn btn-success mr-4">Confirmer</a>
                <a href="{{ path('admin_users_list') }}" class="btn btn-danger">Annuler</a>
            </div>
        </div>
    </div> 
</div>
{% endblock %}
