{% extends 'base.html.twig' %}

{% block title %}Halgueronne - Modifications du compte{% endblock %}

{% block body %}
<div id="accounts-edit-page" class="pb-5">
    <div class="container">
        {% include 'partials/title.html.twig' %}
        <div class="row">
            <h2>Modifications du compte</h2>
        </div>
        <div class="container-content">
            <div class="row">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                    {{ form_row(form.timeZone) }}
                    <button type="submit" class="btn btn-success mr-3">Confirmer</button>
                    <a href="{{ path('account_profile', {'slug':app.user.slug} )}}" class="btn btn-danger">Retour au profil</a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}